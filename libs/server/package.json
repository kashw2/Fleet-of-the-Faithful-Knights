{
  "name": "@kashw2/lib-server",
  "version": "4.0.0",
  "description": "Fleet of the Faithful Knights Serverside Library",
  "main": "./dist/main/index.js",
  "typings": "./dist/main/index.d.ts",
  "module": "./dist/module/index.js",
  "repository": "https://github.com/kashw2/Fleet-of-the-Faithful-Knights.git",
  "homepage": "https://github.com/kashw2/Fleet-of-the-Faithful-Knights#readme",
  "bugs": {
    "url": "https://github.com/kashw2/Fleet-of-the-Faithful-Knights/issues"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/kashw2",
    "access": "restricted",
    "directory": "dist"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "watch:build": "tsc -p tsconfig.json -w",
    "test": "ava",
    "doc": "npm run doc:html && open-cli dist/docs/index.html",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --out dist/docs",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --json dist/docs/typedoc.json",
    "doc:publish": "gh-pages -m \"docs: update\" -d dist/docs"
  },
  "engines": {
    "node": ">=14"
  },
  "devDependencies": {
    "ava": "3.15.0",
    "@ava/typescript": "1.1.1"
  },
  "ava": {
    "failFast": true,
    "timeout": "60s",
    "typescript": {
      "rewritePaths": {
        "src/": "dist/main/"
      }
    },
    "nonSemVerExperiments": {
      "configurableModuleFormat": true
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--experimental-specifier-resolution=node"
    ],
    "files": [
      "!dist/module/**"
    ]
  }
}
